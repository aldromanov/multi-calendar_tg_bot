# Telegram
TELEGRAM_TOKEN=1234567890:ABCDEF...
NOTIFY_CHAT_ID=987654321

# Calendars
TOKENS_PATH=/app/tokens
CALENDAR_TOKENS={"user1": {"token": "token_user1.pickle", "calendars": {"name1": "primary"}}, "user2": {"token": "token_user2.pickle", "calendars": {"name2": "primary"}}}

# Scheduler / timing settings
CHECK_INTERVAL=60         # seconds between checks
AHEAD_MINUTES=360         # minutes ahead to notify
REPEAT_MINUTES=10         # minutes repeat to notify
BUTTON_TTL=30             # seconds button lifetime

# Timezone
TIMEZONE=Europe/Moscow

# Database (Postgres service from docker-compose)
POSTGRES_DB=calendar_db
POSTGRES_USER=calendar_user
POSTGRES_PASSWORD=securepassword
POSTGRES_HOST=db
POSTGRES_PORT=5432
